        <dt>
            @Html.DisplayNameFor(model => model.WebSite)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WebSite)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostingDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostingDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            @if (!String.IsNullOrEmpty(Model.Image))
            {
                <img class="postImage" src="@Url.Content(Model.Image)" alt="" />
            }
            else
            {
                <text> None </text>
            }

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Video)
        </dt>
        <dd>
            @if (!String.IsNullOrEmpty(Model.Video))
            {
                <video controls="controls">
                    <source src="@Url.Content(Model.Video)" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
            }
            else
            {
                <text> None </text>
            }

        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
