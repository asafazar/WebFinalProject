@model IntroToMVC.Models.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div id="mainContent">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Post</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title, "")
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Writer)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Writer)
                    @Html.ValidationMessageFor(model => model.Writer, "")
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.WebSite)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.WebSite)
                    @Html.ValidationMessageFor(model => model.WebSite, "")
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Content)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Content)
                    @Html.ValidationMessageFor(model => model.Content, "")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd>
                    @Html.CheckBox("ImageCheckBox")
                    @Html.TextBoxFor(model => model.Image, new { @class = "Image", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    <script>
                        $('#ImageCheckBox').click(function () {
                            var $this = $(this);

                            if ($this.is(':checked')) {
                                $('#Image').removeAttr("disabled");
                            } else {
                                $('#Image').attr("disabled", "disabled")
                            }
                        });
                    </script>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Video)
                </dt>

                <dd>
                    @Html.CheckBox("VideoCheckBox")
                    @Html.TextBoxFor(model => model.Video, new { @class = "Video", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Video, "", new { @class = "text-danger" })
                    <script>
                        $('#VideoCheckBox').click(function () {
                            var $this = $(this);

                            if ($this.is(':checked')) {
                                $('#Video').removeAttr("disabled");
                            } else {
                                $('#Video').attr("disabled", "disabled")
                            }
                        });
                    </script>

                </dd>

                <p>
                    <input type="submit" value="Save" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </dl>
        </div>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
</div>